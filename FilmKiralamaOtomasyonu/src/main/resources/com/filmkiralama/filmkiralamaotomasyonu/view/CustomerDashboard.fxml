<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<!-- Ana konteyner: AnchorPane ile müşteri arayüzü düzenlenir -->
<AnchorPane prefHeight="205.0" prefWidth="333.0" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/17.0.12" fx:controller="com.filmkiralama.filmkiralamaotomasyonu.Controller.CustomerDashboardController">
    <children>
        <!-- Müşteri paneli başlığı -->
        <Label layoutX="97.0" layoutY="14.0" prefHeight="27.0" prefWidth="143.0" style="-fx-font-size: 18px;" text=" Müşteri Paneli" />
        <!-- Film listesi butonu: Tüm film listesini görüntülemek için kullanılır -->
        <Button layoutX="130.0" layoutY="53.0" onAction="#handleFilmListesi" text="Film Listesi" />
        <!-- Kiralanan filmler butonu: Müşterinin kiraladığı filmleri görüntülemek için kullanılır -->
        <Button layoutX="117.0" layoutY="103.0" onAction="#handleKiralananFilmler" text="Kiralanan Filmler" />
        <!-- Çıkış butonu: Kullanıcıyı müşteri panelinden çıkış yapar -->
        <Button layoutX="255.0" layoutY="165.0" onAction="#handleCikis" text="Çıkış Yap" />
    </children>
</AnchorPane>
